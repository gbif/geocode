# GBIF OCCURRENCE .EDITORCONFIG

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
# 2 space indentation
indent_style = space
indent_size = 2

[*.{html,sh,js}]
indent_style = tab

[*.py]
indent_size = 4

[Dockerfile]
indent_size = 4
